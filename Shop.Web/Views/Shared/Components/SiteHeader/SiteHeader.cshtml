@using Shop.Application.Utils
@model Shop.Domain.Entities.Identity.ApplicationUser
<!-- Header -->
<section id="header">
    <!-- Top NavBar -->
    <div id="top-nav">
        <div class="container">
            <div class="row">
                <div class="col-8 d-none d-md-block">
                    <ul>
                        <li><a href="/">صفحه نخست</a></li>
                        <li><a asp-controller="Home" asp-action="AboutUs">درباره ما</a></li>
                        <li><a asp-controller="Home" asp-action="ContactUs">تماس با ما</a></li>
                    </ul>
                </div>
                <div class="col-12 col-md-4 text-center text-md-end" id="top-support-info">
                    <span>تلفن مشاوره و فروش: 09351234567</span>
                </div>
            </div>
        </div>
    </div>
    <!-- /Top NavBar -->
    <!-- Search NavBar -->
    <div id="search-nav">
        <div class="container pt-1">
            <div class="row py-3 align-content-center">
                <div class="col-12 col-md-3 col-xl-2 text-center text-md-start pb-2" id="header-logo">
                    <a href="/">
                        <img src="/images/logo.png" alt=""> روبیک مارکت
                    </a>
                </div>
                <div class="col-12 col-md-5 col-xl-6">
                    <div id="search-bar">
                        <i class="fa fa-search"></i>
                        <input type="text" placeholder="جستجو کنید...">
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="row">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <div class="col-12 col-md-7 col-lg-6 text-center" id="btn-login-register">
                                <a asp-controller="PublicAuth" asp-action="SignIn">ورود</a> /
                                <a asp-controller="PublicAuth" asp-action="SignUp">عضویت</a>
                            </div>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <img href="user" style="border-radius:50%; width:50px"
                                 src="@(!string.IsNullOrEmpty(@Model.Avatar)?FilePath.AvatarThumb+@Model.Avatar:FilePath.AvatarDefault)" alt="Alternate Text" />
                                <div class="dropdown-content">
                                    <a asp-controller="PublicAuth" asp-action="SignOut">خروج</a>
                                    @*   <a href="user">پنل کاربری</a>*@
                                </div>
                            </div>

                        }

                        <div class="col-12 col-md-5 col-lg-6">
                            <a asp-controller="Home" asp-action="GetOrderDetails">
                                <div class="btn btn-warning w-100"><i class="fa fa-shopping-cart"></i>&nbsp;<span class="d-md-none d-lg-inline-block">سبد خرید</span></div>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Search NavBar -->
    <!-- Main NavBar -->
    <div id="main-nav">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="droopmenu-navbar dmarrow-down droopmenu-horizontal dmpos-top dmfade">
                        <div class="droopmenu-inner">
                            <div class="droopmenu-header">
                                <a href="#" class="droopmenu-toggle"><i class="dm-burg"></i></a>
                                <span class="d-md-none">منوی فروشگاه</span>
                            </div>
                            <!-- Header Mega Menu-->
                            @await Component.InvokeAsync("SiteCategory")
                            <div class="droopmenu-nav">
                                <div class="droopmenu-nav-wrap">
                                    <div class="droopmenu-navi">
                                        <ul class="droopmenu">

                                            <li><a asp-controller="Home" asp-action="AboutUs">درباره ما</a></li>
                                            <li class="droopmenu-parent" aria-haspopup="true">
                                                <a asp-controller="Home" asp-action="ProductList" aria-expanded="false">صفحات فروشگاه<em class="droopmenu-topanim"></em></a><div class="dm-arrow"></div>
                                                <ul style="">
                                                    <li><a asp-controller="Home" asp-action="ProductList">محصولات</a></li>
                                                </ul>
                                            </li>
                                            <li class="droopmenu-parent" aria-haspopup="true">
                                                <a href="./contact.html" aria-expanded="false">تماس با فروشگاه<em class="droopmenu-topanim"></em></a><div class="dm-arrow"></div>
                                                <ul style="">
                                                    <li><a asp-controller="Home" asp-action="QA">سوالات متداول</a></li>
                                                    <li><a asp-controller="Home" asp-action="ContactUs">تماس با ما</a></li>
                                                </ul>
                                            </li>
                                            <li class="droopmenu-parent" aria-haspopup="true">
                                                <a href="./blog.html" aria-expanded="false">بلاگ آموزشی<em class="droopmenu-topanim"></em></a><div class="dm-arrow"></div>
                                                <ul style="">
                                                    <li><a href="./blog.html">آرشیو مطالب</a></li>
                                                    <li><a href="./blog-post.html">داخلی بلاگ</a></li>
                                                </ul>
                                            </li>
                                            <li class="droopmenu-parent" aria-haspopup="true">

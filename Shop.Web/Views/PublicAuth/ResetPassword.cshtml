@model Shop.Domain.DTOs.Auth.ResetPasswordDTO

@{
    Layout = "_DefaultLayout";
}

@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<section class="inner-page" id="contact-page">
    <div class="container-fluid" id="page-hero">
        <div class="row">
            <div class="col-12">
                <div class="container">
                    <div class="row">
                        <div class="col-12 px-0">

                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/">صفحه نخست</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">تغییر رمز عبور</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-2 py-md-5">
        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1">
                <div class="content">
                    <div class="row">
                        <form method="post" asp-controller="PublicAuth" asp-action="ResetPassword">
                            <partial name="_CaptchaInput" />
                            <input type="hidden" asp-for=Token />
                            <div class="col-12 col-lg-7 pt-5 pt-md-0 align-self-center">
                                <div class="title"> رمز عبور جدید در روبیک مارکت</div>
                                <input type="hidden" asp-for="ActiveCode" />

                                <div class="form-group">
                                    <label asp-for="Password"> جدید رمز عبور :</label>
                                    <input type="password" asp-for=Password class="form-control">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword"> تکرار رمز عبور جدید :</label>
                                    <input type="password" asp-for=ConfirmPassword class="form-control">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <a><input type="submit" value="تغییر رمز عبور" class="btn btn-success"></a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
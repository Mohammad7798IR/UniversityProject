@using Shop.Domain.Entities.Identity
@model Shop.Domain.DTOs.UserPanel.UserDetailsDTO

@{
    ViewData["Title"] = "ویرایش اطلاعات حساب ";
}

<section class="inner-page" id="profile-page">

    <partial name="_UserPanelBreadCrumb" />

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="content">
                    <div class="row">
                        <div class="col-12 col-lg-3">
                            @await Component.InvokeAsync("UserSideBar")
                        </div>

                        <div class="col-12 col-lg-9 pl-lg-0 pr-lg-2 mt-2 mt-lg-0">
                            <form asp-area="User" asp-controller="Home" asp-action="UserDetails" method="post" enctype="multipart/form-data">
                                <!-- Profile Fields -->
                                <partial name="_CaptchaInput" />
                                <input type="hidden" asp-for=Token />
                                <div class="custom-container bg-light" id="profile-fields">
                                    <div class="row pt-2 px-3 ">
                                        <div class="col-12"><h1>اطلاعات شخصی</h1></div>
                                    </div>
                                    <hr>
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="title">نام </div>
                                                <input asp-for=FirstName class="form-control" />
                                                <span asp-validation-for=FirstName class=text-danger></span>
                                            </div>
                                            <div class="col-6">
                                                <div class="title"> نام خانوادگی </div>
                                                <input asp-for=LastName class="form-control" />
                                                <span asp-validation-for=LastName class=text-danger></span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="title">تاریخ تولد </div>
                                                <input asp-for=BirthDate class="form-control" />
                                                <span asp-validation-for=BirthDate class=text-danger></span>
                                            </div>
                                            <div class="col-6">
                                                <div class="title">شماره تلفن </div>
                                                <input asp-for=PhoneNumber class="form-control" />
                                                <span asp-validation-for=PhoneNumber class=text-danger></span>
                                            </div>

                                        </div>

                                        <div class="row">
                                            <div class="col-6">
                                                <div class="title">جنسیت </div>
                                                <select asp-for=Gender asp-items="@Html.GetEnumSelectList<Gender>()" class="form-control"></select>
                                                <span asp-validation-for=Gender class=text-danger></span>
                                            </div>
                                            <div class="col-6">
                                                <img style="border-radius:50%; width:150px" alt="Alternate Text" id="imgPreview" />
                                                <input accept="image/*" id="photo" type="file" name="avatar" />
                                            </div>
                                            <div class="form-group">
                                                <a><input type="submit" value="ثبت" class="btn btn-success"></a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </form>
                        </div>

                        <!-- /Profile Fields -->


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



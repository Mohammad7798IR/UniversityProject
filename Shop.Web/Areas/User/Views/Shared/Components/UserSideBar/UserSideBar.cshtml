@model Shop.Domain.DTOs.UserPanel.UserSideBarDTO
@using Shop.Application.Utils
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration


<!-- Side Panel -->
<div class="accordion" id="side-panel">
    <div class="accordion-item menu-container">
        <h2 class="accordion-header">
            <button class="accordion-button bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                <span class="row">
                    <span class="col-3 col-sm-2 col-lg-3">
                        @*<img src="/images/user-no-image.jpg" class="rounded-circle"*@
                        <img src="@(!string.IsNullOrEmpty(@Model.Avatar)?FilePath.AvatarThumb+@Model.Avatar:FilePath.AvatarDefault)" />
                    </span>
                    <span class="col-7 col-sm-8 col-lg-7 pt-0 pt-sm-2 pt-md-3 pt-lg-0 align-self-center">
                        <div id="full-name">@Model.FullName</div>
                        <div class="mt-2" id="email-mobile">@Model.Email</div>
                    </span>
                </span>
            </button>
        </h2>
        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
            <div class="accordion-body">
                <ul>

                    <li>
                        <a href="/User">
                            <div>
                                <div class="icon d-inline-block"><img src="/images/icons/profile-menu/profile.webp" class="pl-2"></div> صفحه اصلی پنل کاربری
                            </div>
                        </a>
                    </li>



                    <li>
                        <a asp-area="User" asp-controller="Home" asp-action="StoreRequest">
                            <div>
                                <div class="icon d-inline-block"><img src="/images/icons/profile-menu/profile.webp" class="pl-2"></div>درخواست فروشندگی
                            </div>
                        </a>
                    </li>


                    <li>
                        <a asp-area="User" asp-controller="Home" asp-action="StoreList">
                            <div>
                                <div class="icon d-inline-block"><img src="/images/icons/profile-menu/profile.webp" class="pl-2"></div>لیست درخواست های فروشندگی
                            </div>
                        </a>
                    </li>

                    @foreach (var item in @Model.RoleIds)
                    {
                        @if (item.RoleId == Configuration.GetSection("Roles")["AplicationSeller"])
                        {
                            <li>
                                <a href="/seller">
                                    <div>
                                        <div class="icon d-inline-block"><img src="/images/icons/profile-menu/profile.webp" class="pl-2"></div>ورود به پنل فروشندگی
                                    </div>
                                </a>
                            </li>
                        }
                        break;
                    }


                    <li>
                        <a asp-area="User" asp-controller="Home" asp-action="UserDetails">
                            <div>
                                <div class="icon d-inline-block"><img src="/images/icons/profile-menu/profile.webp" class="pl-2"></div> ویرایش اطلاعات حساب
                            </div>
                        </a>
                    </li>

                    <li>
                        <a asp-area="User" asp-controller="Home" asp-action="ResetPassword">
                            <div>
                                <div class="icon d-inline-block"><img src="/images/icons/profile-menu/secure-data.png" style="border-radius:50%; width:25px" class="pl-2"></div> تغییر رمز عبور
                            </div>
                        </a>
                    </li>

                    <li>
                        <a href="factors.html">
                            <div>
                                <div class="icon d-inline-block"><img src="/images/icons/profile-menu/orders.webp" class="pl-2"></div> سفارش های من
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="favorites.html">
                            <div>
                                <div class="icon d-inline-block"><img src="/images/icons/profile-menu/favorites.webp" class="pl-2"></div> علاقه مندی ها
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="addresses.html">
                            <div>
                                <div class="icon d-inline-block"><img src="/images/icons/profile-menu/addresses.webp" class="pl-2"></div> آدرس های من
                            </div>
                        </a>
                    </li>
                    <li><hr></li>
                    <li>
                        <a href="../index.html">
                            <div>
                                <div class="icon d-inline-block"><img src="/images/icons/profile-menu/exit.webp" class="pl-2"></div> خروج از حساب
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- /Side Panel -->